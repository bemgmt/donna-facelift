{
    "name": "donna/backend",
    "description": "DONNA AI Platform Backend",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "firebase/php-jwt": "^6.11",
        "sentry/sentry-laravel": "^3.0",
        "phpmailer/phpmailer": "^6.9",
        "telnyx/telnyx-php": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "DONNA\\": "lib/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": false
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}

